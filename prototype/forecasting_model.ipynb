import pandas as pd
from sklearn.linear_model import LinearRegression
import numpy as np

# Load synthetic dataset
df = pd.read_csv("sample_events.csv")

# Encode category column
df["category_encoded"] = df["category"].astype("category").cat.codes

X = df[["category_encoded", "time_of_day", "day_of_week", "host_score"]]
y = df["attendance"]

model = LinearRegression()
model.fit(X, y)

print("Model trained successfully!")

# Test prediction
test_event = pd.DataFrame([{
    "category_encoded": 1,   # e.g., tech
    "time_of_day": 19,
    "day_of_week": 4,
    "host_score": 0.7
}])

prediction = model.predict(test_event)
print("\nPredicted attendance:", prediction[0])
